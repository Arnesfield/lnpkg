{
  "name": "lnpkg",
  "version": "0.0.1",
  "description": "Link local Node.js packages.",
  "homepage": "https://github.com/Arnesfield/lnpkg#readme",
  "bugs": {
    "url": "https://github.com/Arnesfield/lnpkg/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arnesfield/lnpkg.git"
  },
  "license": "MIT",
  "author": "Jefferson Rylee <rylee.jeff385@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": "./lib/index.js",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "lnpkg": "bin/cli.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "lint": "eslint . --ext .js,.ts",
    "lint:strict": "npm run lint -- --max-warnings 0",
    "start": "npm run build -- -w --no-watch.clearScreen",
    "test": "concurrently -r --kill-others-on-fail npm:test:mocha npm:lint:strict \"tsc --skipLibCheck\"",
    "test:mocha": "mocha -r tsx **/*.spec.ts",
    "test:watch": "npm run test:mocha -- --watch --watch-files src,test"
  },
  "dependencies": {
    "@npmcli/arborist": "^7.4.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "lodash.throttle": "^4.1.1",
    "npm-packlist": "^8.0.2",
    "pretty-ms": "^9.0.0",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/lodash.throttle": "^4.1.9",
    "@types/node": "^20.11.22",
    "@types/npm-packlist": "^7.0.3",
    "@types/npmcli__arborist": "^5.6.5",
    "@types/npmcli__package-json": "^4.0.4",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-node-externals": "^7.0.1",
    "rollup-plugin-output-size": "^1.3.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.7.0",
    "npm": ">=8.8.0"
  }
}
